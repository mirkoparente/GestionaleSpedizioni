@model GestionaleSpedizioni.Models.Spedizioni

@{
    ViewBag.Title = "CreaSpedizione";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="h-100 h-custom">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-8 col-xl-6">
                    <div class="card rounded-3">
                        <img src="https://risorse.spedirepro.com/hubfs/Imported_Blog_Media/I%20migliori%20corrieri%20per%20spedizioni%20nazionali%20di%20pacchi%20e%20raccomandate.jpg"
                             class="w-100" style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
                             alt="Sample photo">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Nuova Spedizione</h3>
                            <div id="Privato" class="form-outline mb-4">
                                @Html.HiddenFor(model => model.IdSpedizione, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                <label class="form-label">Mittente</label>
                                @Html.DropDownList("ListItem", new SelectList(ViewBag.clienti, "Value", "Text"), new { @class = "form-select my-2" })
                            </div>

                            <div class="row">
                                <div class="col mb-4">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.DataSpedizione, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.DataSpedizione, new { @type = "date", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DataSpedizione, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                            </div>

                            <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                                <div class="col">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.NomeDestinatario, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.NomeDestinatario, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.NomeDestinatario, "", new { @class = "text-danger" })

                                    </div>

                                </div>  
                                
                                <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                                <div class="col-md-6">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Peso, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Peso, "", new { @class = "text-danger" })

                                    </div>

                                </div>  
                                <div class="col-md-6">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.Destinazione, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.Destinazione, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.Destinazione, "", new { @class = "text-danger" })

                                    </div>

                                </div>  
                                <div class="col-md-6">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.IndirizzoDest, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.IndirizzoDest, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.IndirizzoDest, "", new { @class = "text-danger" })

                                    </div>

                                </div>  
                                <div class="col-md-6">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.CostoSpedizione, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.CostoSpedizione, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.CostoSpedizione, "", new { @class = "text-danger" })

                                    </div>

                                </div>  
                                <div class="col">

                                    <div class="form-outline">
                                        @Html.LabelFor(model => model.DataConsegna, htmlAttributes: new { @class = "control-label" })
                                        @Html.TextBoxFor(m => m.DataConsegna, new { @type = "date", @class = "form-control" })
                                        @Html.ValidationMessageFor(m => m.DataConsegna, "", new { @class = "text-danger" })

                                    </div>

                                </div>
                            </div>

                            <button type="submit" class="btn btn-outline-danger  btn-lg mb-1">Aggiungi Spedizione</button>



                        </div>
                    </div>
                </div>
            </div>
        </div>
            </div>
    </section>

}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
    <script src="~/Scripts/JavaScript.js"></script>
    
}
