
@model IEnumerable<GestionaleSpedizioni.Models.Spedizioni>


@{
    ViewBag.Title = "ListaSpedizioni";
}

<h2 class="text-center my-3">ListaSpedizioni</h2>


<div class="container">
    <div class="d-flex justify-content-between w-100 my-5">
        <button id="btn1" class="btn btn-outline-danger">Cerca Spedizioni in Consegna oggi</button>
        <button id="btn2" class="btn btn-outline-danger">Cerca il totale di Consegne in attesa di consegna</button>
        <button id="btn3" class="btn btn-outline-danger">Cerca il totale di Consegne per città</button>
    </div>
    <div class="d-flex justify-content-between w-100">

    <div id="oggi" style="display:none" >
        <p>Spedizioni in Consegna Oggi:</p>
        <ul id="lista" class="d-flex flex-column">
            
        </ul>
    </div> 
    
    <div id="nonConsegnato"style="display:none" >
        <p>Spedizioni in Attesa di consegna:</p>
        <ul id="lista1" class="d-flex flex-column">
            
        </ul>
    </div> 
        <div id="citta"style="display:none" >
        <p>Spedizioni raggruppate per città:</p>
        <ul id="lista2" class="d-flex flex-column">
            
        </ul>
    </div>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>

                    <th scope="col">N Spedizione</th>
                    <th scope="col">Mittente</th>
                    <th scope="col">Data Spedizione</th>
                    <th scope="col">Destinazione</th>
                    <th scope="col">Nome Destinatario</th>
                    <th scope="col">Indirizzo Destinatario</th>
                    <th scope="col">Peso</th>
                    <th scope="col">Prezzo</th>
                    <th scope="col">
                        <a href="CreaSpedizione" class="text-decoration-none text-dark ">
                            <i class="bi bi-person-plus-fill fs-4"></i>
                        </a>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (GestionaleSpedizioni.Models.Spedizioni c in Model)
                {
                   
                    <tr>
                        <td>@c.IdSpedizione</td>
                        <td>@c.Nome</td>
                        <td>@c.DataSpedizione.ToShortDateString()</td>
                        <td class="text-capitalize">@c.Destinazione</td>
                        <td class="text-capitalize">@c.NomeDestinatario</td>
                        <td class="text-capitalize">@c.IndirizzoDest</td>
                        <td>@c.Peso Kg</td>
                        <td>@c.CostoSpedizione.ToString("C2")</td>
                        <td></td>
                        <td>

                            @Html.ActionLink("Dettaglio", "DettagliSpe", new { id = c.IdSpedizione }, new { @class = "btn btn-outline-danger me-2 " })
                            @Html.ActionLink("Modifica", "ModificaSpe", new { id = c.IdSpedizione }, new { @class = "btn btn-outline-danger me-2 " })
                            @Html.ActionLink("Elimina", "Delete", new { id = c.IdSpedizione }, new { @class = "btn btn-outline-danger " })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    
    <script src="~/Scripts/JavaScript.js"></script>
}

