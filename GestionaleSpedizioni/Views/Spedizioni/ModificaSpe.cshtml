@model GestionaleSpedizioni.Models.Spedizioni

@{
    ViewBag.Title = "ModificaSpe";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section>
        <div class="container py-2 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Modifica Spedizione</h3>

                            <div class="row">
                                <div class="col mb-4">
                                    <label>Mittente</label>
                                    <p>@Model.Nome</p>
                                    @Html.HiddenFor(model => model.IdSpedizione, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                    <div class="form-outline">
                                        @Html.LabelFor(m => m.DataSpedizione, new { @class = "form-label" })
                                        @Html.TextBoxFor(m => m.DataSpedizione, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.DataSpedizione, "", new { @type = "datetimelocal", @class = "text-danger" })
                                    </div>

                                </div>


                            </div>

                            <div class="row">

                                <div class="col mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.LabelFor(m => m.NomeDestinatario, new { @class = "form-label" })

                                        @Html.TextBoxFor(m => m.NomeDestinatario, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.NomeDestinatario, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                               
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.LabelFor(m => m.Destinazione, new { @class = "form-label" })

                                        @Html.TextBoxFor(m => m.Destinazione, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.Destinazione, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">


                                    <div class="form-outline">
                                        @Html.LabelFor(m => m.IndirizzoDest, new { @class = "form-label" })

                                        @Html.TextBoxFor(m => m.IndirizzoDest, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.IndirizzoDest, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.LabelFor(m => m.CostoSpedizione, new { @class = "form-label" })

                                        @Html.TextBoxFor(m => m.CostoSpedizione, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.CostoSpedizione, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col-md-6 mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        @Html.LabelFor(m => m.Peso, new { @class = "form-label" })

                                        @Html.TextBoxFor(m => m.Peso, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.Peso, "", new { @class = "text-danger" })
                                    </div>
                                </div>








                                <div class="col mb-4 pb-2">
                                    <div class="form-outline">
                                        @Html.LabelFor(m => m.DataConsegna, new { @class = "form-label" })

                                        @Html.TextBoxFor(m => m.DataConsegna, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.DataConsegna, "", new { @type = "date", @class = "text-danger" })
                                    </div>

                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-outline-danger btn-lg" type="submit" value="Modifica" />
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>








}
