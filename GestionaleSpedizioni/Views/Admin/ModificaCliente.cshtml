@model GestionaleSpedizioni.Models.Clienti

@{
    ViewBag.Title = "ModificaCliente";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
    <section>
        <div class="container py-2 h-100">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-lg-9 col-xl-7">
                    <div class="card shadow-2-strong card-registration" style="border-radius: 15px;">
                        <div class="card-body p-4 p-md-5">
                            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5">Modifica Cliente</h3>
                            @if (ViewBag.messaggio != null)
                            {

                                <p class="alert alert-danger">@ViewBag.messasggio</p>
                            }
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col mb-4">
                                    @Html.HiddenFor(model => model.IdClienti, new { htmlAttributes = new { @class = "form-control" } })

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
                                    </div>

                                </div>


                            </div>

                            <div class="row">
                                <div class="col mb-4 d-flex align-items-center">

                                    <div class="form-outline datepicker w-100">
                                        @Html.TextBoxFor(m => m.CodiceFiscaleOPartitaIva, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.CodiceFiscaleOPartitaIva, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Indirizzo, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.Indirizzo, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Citta, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.Citta, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                                <div class="col mb-4 pb-2">

                                    <div class="form-outline">
                                        @Html.TextBoxFor(m => m.Tipologia, new { @class = "form-control mw-100" })
                                        @Html.ValidationMessageFor(m => m.Tipologia, "", new { @class = "text-danger" })
                                    </div>

                                </div>
                            </div>

                            <div class="mt-4 pt-2">
                                <input class="btn btn-outline-danger btn-lg" type="submit" value="Modifica" />
                            </div>


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>







   
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
